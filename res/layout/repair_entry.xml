        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="left|center_vertical" >

             <TextView
                   android:id="@+id/textView2"
                   android:layout_width="60dp"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="2dp"
                   
                   android:text="工单状态"
                   android:textSize="12sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:enabled="false"
                android:textSize="12sp"
                android:textColor="#FF0000"
                binding:text="f_downloadstatus" />
            <TextView
                   android:id="@+id/textView2"
                   android:layout_width="60dp"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="2dp"
                   android:gravity="right"
                   android:text="工作日(天)"
                   android:textSize="12sp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:enabled="false"
                android:textSize="12sp"
                android:textColor="#FF0000"
                binding:text="f_workingdays" />

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="报修类型"
                android:textSize="12sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:enabled="false"
                android:textSize="12sp"
                binding:text="REPAIRTYPE" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="来电号码"
                android:textSize="12sp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginRight="2dp"
                android:enabled="false"
                android:textSize="10sp"
                binding:text="PHONE" />

        </LinearLayout>
        
            <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="用户地址"
                android:textSize="12sp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginRight="2dp"
                android:enabled="false"
                android:textSize="12sp"
                binding:text="USERADDRESS" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="派单时间"
                android:textSize="12sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:enabled="false"
                android:textSize="12sp"
                binding:text="SENDTIME" />

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical" >
            
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看工单"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp" 
				binding:visibility="gongdanstatus"
				binding:onClick="DetailCmd" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/uploadicon"
                    binding:visibility="MUTED" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/uploadfail"
                    binding:visibility="NOT(MUTED)" />

            </LinearLayout>
            
            <Button
                    android:id="@+id/call"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="6dp"
                    android:text="拨号"
                    binding:onClick="call"
					binding:visibility="gongdanstatus"/>
            
            <Button
                    android:id="@+id/qiangdan"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="6dp"
                    android:text="抢单"
                    binding:onClick="qiangdan"
					binding:visibility="NOT(gongdanstatus)" />
            
        </LinearLayout>

    </LinearLayout>

</LinearLayout>